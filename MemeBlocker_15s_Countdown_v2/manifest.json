{
  "manifest_version": 3,
  "name": "Meme Blocker - 15s Countdown",
  "version": "1.2",
  "description": "Redirects productive sites to a random meme video with a 15s countdown.",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "blocked.html",
        "blocked.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}